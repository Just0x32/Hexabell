<Application x:Class="Hexabell.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hexabell"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ControlTemplate TargetType="Button" x:Key="HexagonButtonTemplate">
            <Polygon x:Name="HexagonButtonPolygon"
                     Fill="{TemplateBinding Background}"
                     StrokeThickness="3"
                     Stroke="{TemplateBinding BorderBrush}"
                     Points="{Binding ElementName=MainWindowClass, Path=HexagonShape}"/>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="HexagonButtonPolygon" Property="Stroke" Value="#C887CEFA"/>
                    <Setter TargetName="HexagonButtonPolygon" Property="StrokeThickness" Value="3"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Application.Resources>
</Application>
